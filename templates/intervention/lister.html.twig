<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        {% block title %}Liste des interventions{% endblock %}
    </title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <h1>Liste des Interventions</h1>
    <a href="{{ path('app_intervention_ajouter') }}">Ajouter une intervention</a>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Descriptif</th>
                <th>Prix</th>
                <th>Quotite</th>
                <th>Début de l'intervention</th>
                <th>Fin de l'invertion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for i in pInterventions %}
                <tr>
                    <td>{{ i.id }}</td>
                    <td>{{ i.descriptif }}</td>
                    <td>{{ i.prix }}</td>
                    <td>{{ i.quotite }}</td>
                    <td>{{ i.dateDebut|date("d/m/Y") }}</td>
                    <td>{{ i.dateFin|date("d/m/Y") }}</td>
                    <td>
                        <a href="{{ path('app_intervention_consulter', { id: i.id }) }}">Consulter</a> |
                        <a href="{{ path('app_intervention_modifier', { id: i.id }) }}">Modifier</a> |
                        <a href="{{ path('app_intervention_supprimer', { id: i.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette intervention?')">Supprimer</a></td>
                </tr>
            {% else %}
                <tr>
                    <td>Aucune intervention n'a été trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% block javascripts %}{% endblock %}
</body>
</html>
