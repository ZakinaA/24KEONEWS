<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
		
		LISTE DES INTERVENTIONS</br>
		<table>
            {% for i in pInterventions %}
            <tr>
                <td><a href="{{ path('app_intervention_consulter', { 'id': i.id }) }}">{{ i.id }}</a></td>
                <td><a href="{{ path('app_intervention_consulter', { 'id': i.id }) }}">{{ i.descriptif }}</a></td>
                <td><a href="{{ path('app_intervention_consulter', { 'id': i.id }) }}">{{ i.prix }}</a></td>
            </tr>
            {% else %}
            <tr>
                <td>Aucune intervention n'a été trouvé.</td>
            </tr>
            {% endfor %}
        </table>
    </body>
</html>