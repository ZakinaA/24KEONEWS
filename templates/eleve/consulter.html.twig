{% extends 'base.html.twig' %}
{% block title %}Consultation de Cours{% endblock %}
{% block body %}
    <a class="bouton-arriere" href="{{ path('app_eleve_lister') }}">Retourner en arrière</a>
    <h2>PAGE DE CONSULTATION D'UN ÉLÈVE</h2>
    <h3>Élève</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th colspan="2">{{ eleve.nom }} {{ eleve.prenom }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Rue :</td>
                <td>{{ eleve.numrue }} {{ eleve.rue }}</td>
            </tr>
            <tr>
                <td>Code Postal :</td>
                <td>{{ eleve.copos }}</td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td>{{ eleve.ville }}</td>
            </tr>
            <tr>
                <td>Téléphone :</td>
                <td>{{ eleve.tel }}</td>
            </tr>
            <tr>
                <td>E-Mail :</td>
                <td>{{ eleve.mail }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Responsable</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th colspan="2">{{ responsable.nom }} {{ responsable.prenom }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Rue :</td>
                <td>{{ responsable.numrue }} {{ responsable.rue }}</td>
            </tr>
            <tr>
                <td>Code Postal :</td>
                <td>{{ responsable.copos }}</td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td>{{ responsable.ville }}</td>
            </tr>
            <tr>
                <td>Téléphone :</td>
                <td>{{ responsable.tel }}</td>
            </tr>
            <tr>
                <td>E-Mail :</td>
                <td>{{ responsable.mail }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Cours de l'Élève</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Age Minimum</th>
                <th>Heure Début</th>
                <th>Heure Fin</th>
                <th>Jour</th>
            </tr>
        </thead>
        <tbody>
            {% for cours in cours %}
                <tr>
                    <td>{{ cours.libelle }}</td>
                    <td>{{ cours.ageMini }}</td>
                    <td>{{ cours.heureDebut | date('H:i') }}</td>
                    <td>{{ cours.heureFin | date('H:i') }}</td>
                    <td>{{ cours.jour.libelle }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun cours inscrit.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
