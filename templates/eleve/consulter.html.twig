{% extends 'base.html.twig' %}
{% block title %}Consultation d'un élève{% endblock %}
{% block body %}
    <a class="bouton-arriere" href="{{ path('app_eleve_lister') }}">Retourner en arrière</a>
    <h1>Consultation d'un élève</h1>
    <h3>Élève</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th colspan="2">{{ eleve.nom }} {{ eleve.prenom }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Rue :</td>
                <td>{{ eleve.numrue }} {{ eleve.rue }}</td>
            </tr>
            <tr>
                <td>Code Postal :</td>
                <td>{{ eleve.copos }}</td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td>{{ eleve.ville }}</td>
            </tr>
            <tr>
                <td>Téléphone :</td>
                <td>{{ eleve.tel }}</td>
            </tr>
            <tr>
                <td>E-Mail :</td>
                <td>{{ eleve.mail }}</td>
            </tr>
        </tbody>
    </table>
    <h3>Responsable</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th colspan="2">{{ eleve.responsable.nom }} {{ eleve.responsable.prenom }}</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Rue :</td>
                <td>{{ eleve.responsable.numrue }} {{ eleve.responsable.rue }}</td>
            </tr>
            <tr>
                <td>Code Postal :</td>
                <td>{{ eleve.responsable.copos }}</td>
            </tr>
            <tr>
                <td>Ville :</td>
                <td>{{ eleve.responsable.ville }}</td>
            </tr>
            <tr>
                <td>Téléphone :</td>
                <td>{{ eleve.responsable.tel }}</td>
            </tr>
            <tr>
                <td>E-Mail :</td>
                <td>{{ eleve.responsable.mail }}</td>
            </tr>
        </tbody>
    </table>

    <h3>Cours de l'Élève</h3>
    <table class="table-consulter">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Age Minimum</th>
                <th>Heure Début</th>
                <th>Heure Fin</th>
                <th>Jour</th>
            </tr>
        </thead>
        <tbody>
            {% for inscription in eleve.inscriptions %}
                        <tr>
                            <td>{{inscription.cours.libelle}}</td>
                            <td>{{inscription.cours.ageMini }}</td>
                            <td>{{inscription.cours.heureDebut | date('H:i')}}</td>
                            <td>{{inscription.cours.heureFin | date('H:i')}}</td>
                            <td>{{inscription.cours.jour.libelle }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucun cours inscrit.</td>
                        </tr>
                    {% endfor %}
        </tbody>
    </table>
{% endblock %}