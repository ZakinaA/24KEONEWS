{% extends 'base.html.twig' %}
{% block title %}Consultation d'un professionnel{% endblock %}
{% block body %}
        <a class="bouton-arriere" href="{{ path('app_professionnel_lister') }}">Retourner en arrière</a>
		<h1>Consultation d'un professionnel</h1>
        <p>
        <table class="table-consulter">
            <tr>
                <td>Nom : </td><td>{{professionnel.nom}}</td>
            </tr>
                <td>Numéro de rue : </td><td>{{professionnel.numRue}}</td>
            </tr>
            <tr>
                <td>Rue  : </td><td>{{professionnel.rue}}</td>
            </tr>
            <tr>
                <td>Code postal : </td><td>{{professionnel.copos}}</td>
            </tr>
            <tr>
                <td>Ville : </td><td>{{professionnel.ville}}</td>
            </tr>
            <tr>
                <td>Téléphone : </td><td>{{professionnel.tel}}</td>
            </tr>
            <tr>
                <td>Mail : </td><td>{{professionnel.mail}}</td>
            </tr>
        </table>
{% endblock %}