{% extends 'base.html.twig' %}
{% block title %}Consultation d'un responsable{% endblock %}
{% block body %}
    	<a class="bouton-arriere" href="{{ path('app_responsable_lister') }}">Retourner en arrière</a>
		<h1>Consultation d'un responsable</h1>
        <h3>Responsable</h3>
        <table class="table-consulter">
            <thead>
                <tr>
                    <th colspan="2">{{ responsable.nom }} {{ responsable.prenom }}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Rue :</td>
                    <td>{{ responsable.numrue }} {{ responsable.rue }}</td>
                </tr>
                <tr>
                    <td>Code Postal :</td>
                    <td>{{ responsable.copos }}</td>
                </tr>
                <tr>
                    <td>Ville :</td>
                    <td>{{ responsable.ville }}</td>
                </tr>
                <tr>
                    <td>Téléphone :</td>
                    <td>{{ responsable.tel }}</td>
                </tr>
                <tr>
                    <td>E-Mail :</td>
                    <td>{{ responsable.mail }}</td>
                </tr>
            </tbody>
        </table>
        <table>
            <td>
                <table class="table-consulter">
                    <h3>Élèves d'un responsable</h3>
                    <tr>
                        <td>ID : </td>
                        <td>Nom : </td>
                        <td>Prenom : </td>
                        <td>Rue : </td></td>
                        <td>Code Postal : </td>
                        <td>Ville : </td>
                        <td>Téléphone : </td>
                        <td>E-Mail : </td>
                    </tr>
                    {% for eleve in responsable.eleves %}
                        <tr>
                            <td>{{eleve.id}} </td>
                            <td>{{eleve.nom}} </td>
                            <td>{{eleve.prenom}} </td>
                            <td>{{eleve.numrue}} {{eleve.rue}}
                            <td>{{eleve.copos}}</td>
                            <td>{{eleve.ville}}</td>
                            <td>{{eleve.tel}}</td>
                            <td>{{eleve.mail}}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">Aucun cours inscrit.</td>
                        </tr>
                    {% endfor %}
                </table>
            </td>
        </table>
{% endblock %}