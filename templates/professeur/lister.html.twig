{# templates/professeur/lister.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Liste des Professeurs{% endblock %}</title>
        {% block stylesheets %}
            <style>
                table {
                    width: 80%;
                    margin: 0 auto;
                    border-collapse: collapse;
                }
                th, td {
                    padding: 10px;
                    text-align: left;
                    border: 1px solid #ddd;
                }
                th {
                    background-color: #f2f2f2;
                }
                .container {
                    display: flex;
                    justify-content: space-between;
                    padding: 20px;
                }
                .links {
                    width: 20%;
                    border-right: 1px solid #ddd;
                    padding-right: 20px;
                }
                .content {
                    width: 75%;
                }
            </style>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div class="links">
                <h3>Menu</h3>
                <ul>
                    <li><a href="{{ path('app_lister_instrument') }}">Lister Instruments</a></li>
                    <li><a href="{{ path('Type_instrument_lister') }}">Type Instruments</a></li>
                    <li><a href="{{ path('app_Accessoire_lister') }}">Accessoires</a></li>
                    <li><a href="{{ path('app_Marque_lister') }}">Marques</a></li>
                    <li><a href="{{ path('app_Modele_lister') }}">Modèles</a></li>
                </ul>
            </div>
            <div class="content">
                <h1>Liste des Professeurs</h1>
                <table>
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prénom</th>
                            <th>Adresse</th>
                            <th>Téléphone</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for professeur in pProfesseur %}
                            <tr>
                                <td>{{ professeur.nom }}</td>
                                <td>{{ professeur.prenom }}</td>
                                <td>{{ professeur.numRue }} {{ professeur.rue }}, {{ professeur.copos }} {{ professeur.ville }}</td>
                                <td>{{ professeur.tel }}</td>
                                <td>{{ professeur.mail }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">Aucun professeur trouvé.</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </body>
</html>
