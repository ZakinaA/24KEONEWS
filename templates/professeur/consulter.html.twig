{% extends 'base.html.twig' %}
{% block title %}Consultation d'un professeur{% endblock %}
{% block body %}
		<h1>Consultation d'un professeur</h1>
        <table>
            <tr>
                <td><strong>ID :</strong></td>
                <td>{{ professeur.id }}</td>
                <td rowspan="10">
                    {% set photo = 'professeur/' ~ professeur.id ~ '.jpg' %}
                    <span class="zoom">
                        <img src="{{ asset(photo) }}" alt="Photo de {{ professeur.nom }} {{ professeur.prenom }}" title="{{ professeur.nom }} {{ professeur.prenom }}" width="200" height="200"/>
                    </span>
                </td>
            </tr>
            <tr>
                <td><strong>Nom :</strong></td>
                <td>{{ professeur.nom }}</td>
            </tr>
            <tr>
                <td><strong>Prénom :</strong></td>
                <td>{{ professeur.prenom }}</td>
            </tr>
            <tr>
                <td><strong>Numéro de Rue :</strong></td>
                <td>{{ professeur.numRue }}</td>
            </tr>
            <tr>
                <td><strong>Rue :</strong></td>
                <td>{{ professeur.rue }}</td>
            </tr>
            <tr>
                <td><strong>Code Postal :</strong></td>
                <td>{{ professeur.copos }}</td>
            </tr>
            <tr>
                <td><strong>Ville :</strong></td>
                <td>{{ professeur.ville }}</td>
            </tr>
            <tr>
                <td><strong>Téléphone :</strong></td>
                <td>{{ professeur.tel }}</td>
            </tr>
            <tr>
                <td><strong>Email :</strong></td>
                <td>{{ professeur.mail }}</td>
            </tr>
            <tr>
                <td><strong>Types d'Instruments :</strong></td>
                <td>
                    {% if professeur.typeinstrument|length > 0 %}
                        <ul>
                            {% for typeInstrument in professeur.typeinstrument %}
                                <li>{{ typeInstrument.libelle }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <span class="no-data">Aucun type d'instrument défini</span>
                    {% endif %}
                </td>
            </tr>
        </table>
        <table>
    <thead>
        <tr>
            <th colspan="4">Cours Enseignés</th>
        </tr>
        <tr>
            <th>Libellé</th>
            <th>Heure de Début</th>
            <th>Heure de Fin</th>
        </tr>
    </thead>
    <tbody>
        {% if professeur.cours|length > 0 %}
            {% for cours in professeur.cours %}
                <tr>
                    <td>{{ cours.libelle }}</td>
                    <td>{{ cours.heureDebut|date('H:i') }}</td>
                    <td>{{ cours.heureFin|date('H:i') }}</td>
                </tr>
            {% endfor %}
        {% else %}
            <tr>
                <td colspan="4"><span class="no-data">Aucun cours enseigné</span></td>
            </tr>
        {% endif %}
    </tbody>
</table>
{% endblock %}