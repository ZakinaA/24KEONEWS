<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <style>
            body {
                display: flex;
                font-family: Arial, sans-serif;
                margin: 0;
            }
            .sidebar {
                width: 200px;
                background-color: #333;
                color: white;
                height: 100vh;
                padding: 20px;
            }
            .sidebar a {
                display: block;
                color: white;
                text-decoration: none;
                padding: 10px 0;
            }
            .sidebar a:hover {
                background-color: #575757;
                padding-left: 10px;
            }
            .content {
                flex-grow: 1;
                padding: 20px;
                display: flex;
                justify-content: center;
                align-items: center;
                background-color: #f4f4f4;
            }
            table {
                width: 80%;
                border-collapse: collapse;
                margin-top: 20px;
            }
            th, td {
                border: 1px solid #ddd;
                padding: 12px;
                text-align: center;
            }
            th {
                background-color: #4CAF50;
                color: white;
            }
            tr:nth-child(even) {
                background-color: #f2f2f2;
            }
        </style>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <div class="sidebar">
            <h3>Navigation</h3>
            <a href="{{ path('app_lister_instrument') }}">Liste des Instruments</a>
            <a href="{{ path('Type_instrument_lister') }}">Types d'Instruments</a>
            <a href="{{ path('app_Accessoire_lister') }}">Accessoires</a>
            <a href="{{ path('app_Marque_lister') }}">Marques</a>
            <a href="{{ path('app_Modele_lister') }}">Modèles</a>
    </div>
        <div class="content">
        <div>
        <h1>Liste des Instruments</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Numéro de Série</th>
                    <th>Date d'Achat</th>
                    <th>Prix d'Achat</th>
                    <th>Utilisation</th>
                    <th>Couleur</th>
                    <th>Type d'Instrument</th>
					<th>Accessoire</th>
					<th>Marque</th>
                    <th>Modèle</th>
                </tr>
            </thead>
            <tbody>
                {% for e in pInstrument %}
                    <tr>
                        <td><a href="{{ path('app_consulter_instrument', { 'id': e.id }) }}">{{ e.numSerie }}</a></td>
                        <td>{{ e.dateAchat|date('d/m/Y') }}</td>
                        <td>{{ e.prixAchat }} €</td>
                        <td>{{ e.utilisation }}</td>
                        <td>{{ e.couleur }}</td>
                        <td>
							{% if e.typeinstrument is not null %}
								{{ e.typeinstrument.libelle }}
							{% else %}
								Non défini
							{% endif %}
						</td>
                        <td>
                            {% if e.accessoires|length > 0 %}
                                {% for accessoire in e.accessoires %}
                                    {{ accessoire.libelle }}
                                    {% if not loop.last %}, {% endif %} 
                                {% endfor %}
                            {% else %}
                                Non défini
                            {% endif %}
                        </td>
						<td>
                            {% if e.marque is not null %}
                                {{ e.marque.libelle }}
                            {% else %}
                                Non défini
                            {% endif %}
                        </td>
						<td>
							{% if e.modele is not null %}
								{{ e.modele.libelle }}
							{% else %}
								Non défini
							{% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun instrument n'a été trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        </div>
        </div>
    </body>
</html>