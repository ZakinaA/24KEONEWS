<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <h1>Liste des Instruments</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Numéro de Série</th>
                    <th>Date d'Achat</th>
                    <th>Prix d'Achat</th>
                    <th>Utilisation</th>
                    <th>Couleur</th>
                    <th>Type d'Instrument</th>
					<th>Accessoire</th>
					<th>Marque</th>
                    <th>Modèle</th>
                </tr>
            </thead>
            <tbody>
                {% for e in pInstrument %}
                    <tr>
                        <td><a href="{{ path('app_lister_instrument', { 'id': e.id }) }}">{{ e.numSerie }}</a></td>
                        <td>{{ e.dateAchat|date('d/m/Y') }}</td>
                        <td>{{ e.prixAchat }} €</td>
                        <td>{{ e.utilisation }}</td>
                        <td>{{ e.couleur }}</td>
                        <td>
							{% if e.typeinstrument is not null %}
								{{ e.typeinstrument.libelle }}
							{% else %}
								Non défini
							{% endif %}
						</td>
                        <td>
                            {% if e.accessoires|length > 0 %}
                                {% for accessoire in e.accessoires %}
                                    {{ accessoire.libelle }}
                                    {% if not loop.last %}, {% endif %} 
                                {% endfor %}
                            {% else %}
                                Non défini
                            {% endif %}
                        </td>
						<td>
                            {% if e.marque is not null %}
                                {{ e.marque.libelle }}
                            {% else %}
                                Non défini
                            {% endif %}
                        </td>
						<td>
							{% if e.modele is not null %}
								{{ e.modele.libelle }}
							{% else %}
								Non défini
							{% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun instrument n'a été trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>