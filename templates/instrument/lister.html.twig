<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        <h1>Liste des Instruments</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Numéro de Série</th>
                    <th>Date d'Achat</th>
                    <th>Prix d'Achat</th>
                    <th>Utilisation</th>
                    <th>Couleur</th>
                    <th>Type d'Instrument</th>
                </tr>
            </thead>
            <tbody>
                {% for e in pInstrument %}
                    <tr>
                        <td><a href="{{ path('app_lister_instrument', { 'id': e.id }) }}">{{ e.numSerie }}</a></td>
                        <td>{{ e.dateAchat|date('d/m/Y') }}</td>
                        <td>{{ e.prixAchat }} €</td>
                        <td>{{ e.utilisation }}</td>
                        <td>{{ e.couleur }}</td>
                        <td>
							{% if e.typeinstrument is not null %}
								{{ e.typeinstrument.libelle }}
							{% else %}
								Non défini
							{% endif %}
						</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucun instrument n'a été trouvé.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </body>
</html>