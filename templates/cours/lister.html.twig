{% extends 'base.html.twig' %}

{% block title %}Liste des Cours{% endblock %}

{% block body %}
    <h1>LISTE DES COURS</h1>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libellé</th>
            </tr>
        </thead>
        <tbody>
            {% for c in pCours %}
                <tr>
                    <td>{{ c.id }}</td>
                    <td>{{ c.libelle }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun cours n'a été trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}{% endblock %}
