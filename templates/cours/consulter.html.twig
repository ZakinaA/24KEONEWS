{% extends 'base.html.twig' %}

{% block title %}Consultation de Cours{% endblock %}

{% block body %}
    <h5>PAGE DE CONSULTATION D'UN COURS</h5>
    <p>
    <table>
        <tr>
            <td>Libelle : </td>
            <td>{{ cours.libelle }}</td>
        </tr>
        <tr>
            <td>Age Minimum : </td>
            <td>{{ cours.ageMini }}</td>
        </tr>
        <tr>
            <td>Heure de Debut : </td>
            <td>{{ cours.heureDebut | date('H:i')}}</td>
        </tr>
        <tr>
            <td>Heure de Fin : </td>
            <td>{{ cours.heureFin | date('H:i')}}</td>
        </tr>
        <tr>
            <td>Jour : </td>
            <td>{{ cours.jour.libelle }}</td>
        </tr>

        {% if eleve is not empty %}
        {% for eleve in eleve %}
                <th>{{eleve.nom}} {{eleve.prenom}}</th>
                <tr><td>ID : </td><td>{{eleve.id}} </td></tr>
                <tr><td>Rue : </td><td>{{eleve.numrue}} {{eleve.rue}}</td></tr>
                <tr><td>Code Postal : </td><td>{{eleve.copos}}</td></tr>
                <tr><td>Ville : </td><td>{{eleve.ville}}</td></tr>
                <tr><td>Téléphone : </td><td>{{eleve.tel}}</td></tr>
                <tr><td>E-Mail : </td><td>{{eleve.mail}}</td></tr>
        {% endfor %}    
        {% else %}
            <tr><td colspan="2">Aucun élève trouvé.</td></tr>
        {% endif %}
        
    </table>
</p>
{% endblock %}
