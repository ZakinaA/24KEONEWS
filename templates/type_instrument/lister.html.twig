<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
		
		LISTE DES TYPE DE INSTRUMENTS</br>
		<table>
		{% for e in pTypeInstrument %}
		<tr>
			<td><a href="{{ path('Type_instrument_lister', { 'id': e.id }) }}">{{ e.libelle }}</a></td>
			<td>{{ e.libelle }}</a></td>
			<td>
				{% if e.classeinstrument is not null %}
				{{ e.classeinstrument.libelle }}
				{% else %}
					Non défini
				{% endif %}
			</td>
			<td>
                    <strong>Professeurs :</strong>
                    {% if e.professeurs|length > 0 %}
                    <ul>
                    {% for professeur in e.professeurs %}
                    <li>{{ professeur.nom }} {{ professeur.prenom }}</li>
                {% endfor %}
                </ul>
                {% else %}
                    Aucun professeur associé
                {% endif %}
            </td>
	{% else %}
		<tr>
		<td>Aucun instrument n'a été trouvé.</td>
		</tr>
	{% endfor %}
</table>
	
	 
    </body>
</html>